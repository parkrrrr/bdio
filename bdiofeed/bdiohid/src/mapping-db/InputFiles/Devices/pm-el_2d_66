# Display definition for Papenmeier : BrailleX EL 2D-66

# The long key on the front is the Easy Access Bar.
# RoutingKey1 refers to the row of keys just behind the text cells.
# The keys to the left of the status cells are named Status.1 through Status.13.

ttydriver    "Papenmeier"
ttymodel     "el_2d_66"
ttycode      "pm"
manufacturer "Papenmeier"
model        "BrailleX EL 2D-66"

display {
  row {
    cells 8;
    router1 {
      router   4;  # RoutingKey1
    }
  }

  left {
    button 1   (1, 0) "LeftSwitchRear";   # brltty has no binding for this key
    button 2   (1, 1) "LeftSwitchFront";   # brltty has no binding for this key
    button 3   (1, 2) "LeftKeyRear"; 
    button 4   (1, 3) "LeftKeyFront"; 
  }

  right {
    button 5   (1, 6) "RightSwitchRear";   # brltty has no binding for this key
    button 6   (1, 7) "RightSwitchFront";   # brltty has no binding for this key
    button 7   (1, 4) "RightKeyRear";   # brltty has no binding for this key
    button 8   (1, 5) "RightKeyFront";   # brltty has no binding for this key
  }

  button 9   (0, 0) "BarLeft1"; 
  button 10   (0, 1) "BarLeft2"; 
  button 11   (0, 4) "BarRight1"; 
  button 12   (0, 5) "BarRight2"; 
  button 13   (0, 2) "BarUp1"; 
  button 14   (0, 3) "BarUp2"; 
  button 15   (0, 6) "BarDown1"; 
  button 16   (0, 7) "BarDown2"; 
  # unrecognized group 6 named "Status"   # brltty has no binding for this key
}
